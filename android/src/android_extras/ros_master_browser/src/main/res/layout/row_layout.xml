<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="6dip"
    >
    <!--  
      android:layout_height="?android:attr/listPreferredItemHeight"
    -->
    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="6dip"
        android:src="@drawable/conductor"
    />
    <TextView
        style="@android:style/TextAppearance.Medium"
        android:id="@+id/service_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        
        android:layout_toRightOf="@id/icon"
        android:text="My Application" 
    />
    <TextView  
        style="@android:style/TextAppearance.Small"
        android:id="@+id/service_detail"
        android:layout_marginLeft="15dip"

        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        
        android:layout_toRightOf="@id/icon"
        android:layout_below="@id/service_name"
        
        android:ellipsize="marquee"
        android:text="Simple application that\n shows how to\n use RelativeLayout" 
    />
    <!-- 
        android:singleLine="true"
        style="@style/service_detail_style"

        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_above="@id/service_detail"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:layout_alignWithParentIfMissing="true"
     -->

</RelativeLayout>